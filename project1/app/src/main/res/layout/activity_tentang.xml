<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Tentang">

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rizqi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtIsiNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rizqi Dwi Purwanto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email :"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtIsiEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rizqipurwanto300@gmail.com"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="No. Telp :"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtIsiTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="083852888532"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alamat"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtIsiAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jl. Sembilang VII"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>